<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trailer_constraint_margin"
    android:background="@drawable/background_border_rounded">

    <ImageView
        android:id="@+id/iv_trailer_thumbnail"
        android:layout_width="@dimen/trailer_image_width"
        android:layout_height="@dimen/trailer_image_height"
        android:layout_marginEnd="@dimen/trailer_image_margin"
        android:layout_marginStart="@dimen/trailer_image_margin"
        android:layout_marginTop="@dimen/trailer_image_margin"
        android:contentDescription="@string/trailer_iv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        android:text="@string/trailer_tv_title"
        android:maxWidth="@dimen/trailer_image_width"
        android:textColor="@color/trailers_text_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_trailer_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_trailer_thumbnail" />

    <ImageView
        android:id="@+id/iv_trailer_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_trailer_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/iv_trailer_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_trailer_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/iv_trailer_thumbnail"
        app:srcCompat="@android:drawable/ic_media_play" />

</android.support.constraint.ConstraintLayout>